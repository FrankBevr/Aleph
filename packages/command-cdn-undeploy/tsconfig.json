{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "types",
        "outDir": "compiled",
        "strict": true,
        "lib": [
            "ES2015"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "../node_modules/**/*",
        "../../node_modules/**/*"
    ]
}