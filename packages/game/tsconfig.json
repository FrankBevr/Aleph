{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "types",
        "outDir": "compiled",
        "strict": true,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "allowUmdGlobalAccess": true,
        "jsx": "react-native"
    },
    "include": [
        "src/**/*"
    ]
}