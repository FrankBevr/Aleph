{
    "name": "@alephhack/game",
    "version": "0.0.1",
    "private": true,
    "main": "compiled/index.js",
    "types": "types/index.d.ts",
    "dependencies": {
        "three": "*",
        "react": "*",
        "react-dom": "*"
    },
    "devDependencies": {
        "@types/react": "*",
        "@types/react-dom": "*",
        "typescript": "*",
        "esbuild": "*",
        "pkg": "*"
    },
    "scripts": {
        "build:compile": "tsc",
        "build:bundle": "esbuild src/index.tsx --bundle --platform=browser --jsx=automatic --outfile=dist/alephhack.js --sourcemap",
        "build": "npm run build:compile && npm run build:bundle",
        "start": "esbuild src/index.tsx --bundle --platform=browser --jsx=automatic --outfile=dist/alephhack.js --sourcemap --serve=0.0.0.0:4000 --servedir=dist"
    }
}